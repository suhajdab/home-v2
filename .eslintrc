{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-trailing-spaces": [2, { "skipBlankLines": true }]
    },
    "env": {
        "node": true
    }
}
